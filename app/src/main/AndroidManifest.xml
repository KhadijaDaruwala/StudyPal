<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.studypal.khadija.studypal">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".Login.FacebookApplication"
        android:allowBackup="true"
        android:icon="@drawable/splashicon"
        android:label="@string/app_name"
        android:theme="@style/AppTheme"
        android:largeHeap="true"
        >


        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/SplashTheme">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".Login.SocialLogin"
            android:label="@string/title_activity_social_login" />

        <activity
            android:name=".NavBaseActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>

        <meta-data
            android:name="com.facebook.sdk.ApplicationId"
            android:value="@string/facebook_app_id" />

        <activity
            android:name="com.facebook.FacebookActivity"
            android:configChanges="keyboard|keyboardHidden|screenLayout|screenSize|orientation"
            android:label="@string/app_name"
            android:theme="@android:style/Theme.Translucent.NoTitleBar" />
        <activity
            android:name=".Calendar.EventListActivity"
            android:label="@string/app_name" />
        <activity
            android:name=".Calendar.EventEditorActivity"
            android:label="@string/app_name" />
        <activity
            android:name=".Calendar.EventViewerActivity"
            android:label="@string/app_name" />
        <activity
            android:name=".Syllabus.SyllabusActivity"
            android:label="@string/title_activity_syllabus"
            android:theme="@style/AppTheme.NoActionBar"></activity>

        <activity
            android:name=".Scribble.EditActivity"
            android:label="@string/app_name" />
        <activity
            android:name=".StudyTime.StudyTimeLogsActivity"
            android:label="@string/app_name"/>



    </application>

</manifest>
